---
# Default variables for provision_vm role
# Generated by ops-translate from intent: {{ intent.workflow_name }}

# VM Configuration
{%- for param_name, param_spec in intent.inputs.items() %}
{%- if param_spec.default is defined %}
{{ param_name }}: {{ param_spec.default if param_spec.type != 'string' else '"' + param_spec.default|string + '"' }}
{%- else %}
# {{ param_name }}: ""  # {{ 'Required' if param_spec.required else 'Optional' }}{% if param_spec.description %} - {{ param_spec.description }}{% endif %}

{%- endif %}
{%- endfor %}

# Profile: {{ profile_name }}
target_namespace: "{{ profile.default_namespace }}"
target_network: "{{ profile.default_network }}"
target_storage_class: "{{ profile.default_storage_class }}"

{%- if intent.compute %}

# Compute defaults
{%- if intent.compute.cpu_cores is defined %}
default_cpu_cores: {{ intent.compute.cpu_cores }}
{%- endif %}
{%- if intent.compute.memory_gb is defined %}
default_memory_gb: {{ intent.compute.memory_gb }}
{%- endif %}
{%- if intent.compute.disk_gb is defined %}
default_disk_gb: {{ intent.compute.disk_gb }}
{%- endif %}
{%- endif %}
